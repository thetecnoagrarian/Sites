{{#> layouts/admin }}
<div class="admin-container">
    <h1>Manage Users</h1>
    {{#if success}}
        <div class="message success">{{success}}</div>
    {{/if}}
    {{#if error}}
        <div class="message error">{{error}}</div>
    {{/if}}
    <sl-button href="/admin/users/new" variant="primary" style="margin-bottom: 1rem;">
        <sl-icon slot="prefix" name="person-plus"></sl-icon>
        New User
    </sl-button>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{username}}</td>
                <td>{{role}}</td>
                <td>
                    {{#unless (eq ../user.id id)}}
                    <form action="/admin/users/{{id}}/delete" method="POST" style="display: inline;">
                        <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                        <sl-button type="submit" variant="danger" size="small" onclick="return confirm('Are you sure?')">
                            <sl-icon slot="prefix" name="trash"></sl-icon>
                            Delete
                        </sl-button>
                    </form>
                    {{else}}
                    <span>(You)</span>
                    {{/unless}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/layouts/admin }} 