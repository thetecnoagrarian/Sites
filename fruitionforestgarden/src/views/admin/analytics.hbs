{{#> layouts/admin}}
<style>
/* Analytics Page Specific Styles */
.analytics-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
    background: #fafafa;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(47, 112, 166, 0.3);
}

.analytics-table th,
.analytics-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #b0aba1;
}

.analytics-table th {
    background-color: #dde0ed;
    font-weight: 600;
    color: #323581;
}

.analytics-table tbody tr:hover {
    background-color: #dde0ed;
    transition: background-color 0.2s ease;
}

/* Health Indicator Styles */
.health-indicator {
    padding: 1.5rem;
    border-radius: 10px;
    border: 2px solid;
    transition: all 0.3s ease;
}

.health-indicator.healthy {
    background-color: rgba(89, 177, 85, 0.1);
    border-color: #59b155;
    color: #59b155;
}

.health-indicator.unhealthy {
    background-color: rgba(179, 0, 0, 0.1);
    border-color: #b30000;
    color: #b30000;
}

.health-indicator.warning {
    background-color: rgba(255, 146, 30, 0.1);
    border-color: #ff921e;
    color: #ff921e;
}

.health-status {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    font-weight: 600;
}

.status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 0.75rem;
    display: inline-block;
}

.health-indicator.healthy .status-dot {
    background-color: #59b155;
    box-shadow: 0 0 8px rgba(89, 177, 85, 0.5);
}

.health-indicator.unhealthy .status-dot {
    background-color: #b30000;
    box-shadow: 0 0 8px rgba(179, 0, 0, 0.5);
}

.health-indicator.warning .status-dot {
    background-color: #ff921e;
    box-shadow: 0 0 8px rgba(255, 146, 30, 0.5);
}

.health-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    font-size: 0.95rem;
}

.health-details div {
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 6px;
    border: 1px solid rgba(0, 0, 0, 0.1);
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
}

.stat-card {
    background: #fafafa;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(47, 112, 166, 0.3);
    text-align: center;
    border: 2px solid #dde0ed;
    transition: all 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(47, 112, 166, 0.4);
    border-color: #2f70a6;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: bold;
    color: #323581;
    margin-bottom: 0.5rem;
    font-family: Georgia, serif;
}

.stat-label {
    color: #535151;
    font-size: 1rem;
    font-weight: 500;
}

/* Row Limit Controls */
.row-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding: 1rem;
    background: #dde0ed;
    border-radius: 10px;
    border: 1px solid #b0aba1;
}

.row-controls label {
    font-weight: 600;
    color: #323581;
    margin-right: 1rem;
}

.row-controls select {
    padding: 0.5rem;
    border: 1px solid #b0aba1;
    border-radius: 6px;
    background: #fafafa;
    color: #535151;
    font-size: 0.9rem;
}

.row-controls select:focus {
    outline: none;
    border-color: #2f70a6;
    box-shadow: 0 0 0 2px rgba(47, 112, 166, 0.2);
}

/* Responsive Design */
@media (max-width: 768px) {
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .health-details {
        grid-template-columns: 1fr;
    }
    
    .row-controls {
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
    }
    
    .analytics-table {
        font-size: 0.9rem;
    }
    
    .analytics-table th,
    .analytics-table td {
        padding: 0.75rem 0.5rem;
    }
}
</style>
<div class="admin-content">
    <div class="admin-header">
        <h1>Analytics Dashboard</h1>
    </div>

    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <!-- Database Health -->
    <section class="admin-section">
        <h2>Database Health</h2>
        <div class="health-indicator {{#if dbHealth.healthy}}{{#if (gt dbHealth.tables.page_views.rowCount 0)}}healthy{{else}}warning{{/if}}{{else}}unhealthy{{/if}}">
            <div class="health-status">
                <span class="status-dot"></span>
                {{#if dbHealth.healthy}}
                    {{#if (gt dbHealth.tables.page_views.rowCount 0)}}
                        Database Healthy
                    {{else}}
                        Database Healthy (No Data Yet)
                    {{/if}}
                {{else}}
                    Database Issues Detected
                {{/if}}
            </div>
            <div class="health-details">
                <div><strong>Page Views Table:</strong> {{dbHealth.tables.page_views.rowCount}} rows</div>
                <div><strong>Unique Visitors Table:</strong> {{dbHealth.tables.unique_visitors.rowCount}} rows</div>
                <div><strong>Last Check:</strong> {{formatDate dbHealth.timestamp}}</div>
            </div>
        </div>
    </section>

    <!-- Summary Stats -->
    <section class="admin-section">
        <h2>Summary Statistics</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number">{{totalStats.totalPageViews}}</div>
                <div class="stat-label">Total Page Views</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{totalStats.totalUniqueVisitors}}</div>
                <div class="stat-label">Unique Visitors</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">{{totalStats.todayPageViews}}</div>
                <div class="stat-label">Today's Views</div>
            </div>
        </div>
    </section>

    <!-- Page View Statistics -->
    <section class="admin-section">
        <h2>Top Pages (Last 30 Days)</h2>
        <div class="row-controls">
            <label for="pageViewLimit">Show top pages:</label>
            <select id="pageViewLimit" onchange="updatePageViewLimit(this.value)">
                <option value="10" {{#if (eq pageViewLimit 10)}}selected{{/if}}>Top 10</option>
                <option value="25" {{#if (eq pageViewLimit 25)}}selected{{/if}}>Top 25</option>
                <option value="50" {{#if (eq pageViewLimit 50)}}selected{{/if}}>Top 50</option>
                <option value="100" {{#if (eq pageViewLimit 100)}}selected{{/if}}>Top 100</option>
            </select>
        </div>
        <table class="analytics-table">
            <thead>
                <tr>
                    <th>Page</th>
                    <th>Total Views</th>
                    <th>Unique IPs</th>
                </tr>
            </thead>
            <tbody>
                {{#each pageViewStats}}
                <tr>
                    <td>{{this.page_path}}</td>
                    <td>{{this.views}}</td>
                    <td>{{this.unique_ips}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>

    <!-- Recent Activity -->
    <section class="admin-section">
        <h2>Recent Activity</h2>
        <div class="row-controls">
            <label for="activityLimit">Show recent activities:</label>
            <select id="activityLimit" onchange="updateActivityLimit(this.value)">
                <option value="10" {{#if (eq activityLimit 10)}}selected{{/if}}>Last 10</option>
                <option value="25" {{#if (eq activityLimit 25)}}selected{{/if}}>Last 25</option>
                <option value="50" {{#if (eq activityLimit 50)}}selected{{/if}}>Last 50</option>
                <option value="100" {{#if (eq activityLimit 100)}}selected{{/if}}>Last 100</option>
            </select>
        </div>
        <table class="analytics-table">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Page</th>
                    <th>IP Address</th>
                </tr>
            </thead>
            <tbody>
                {{#each recentActivity}}
                <tr>
                    <td>{{formatDate this.timestamp}}</td>
                    <td>{{this.page_path}}</td>
                    <td>{{this.ip_address}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
</div>

<script>
function updatePageViewLimit(limit) {
    const url = new URL(window.location);
    url.searchParams.set('pageViewLimit', limit);
    window.location.href = url.toString();
}

function updateActivityLimit(limit) {
    const url = new URL(window.location);
    url.searchParams.set('activityLimit', limit);
    window.location.href = url.toString();
}
</script>

{{/layouts/admin}}
