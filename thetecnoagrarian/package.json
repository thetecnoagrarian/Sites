{
  "name": "thetecnoagrarian",
  "version": "1.0.0",
  "description": "A blog website exploring the intersection of technology and agriculture",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/app.js",
    "dev": "node src/scripts/backup-reminder.js && nodemon src/app.js",
    "backup": "node src/scripts/backup.js",
    "backup:check": "node src/scripts/backup-reminder.js",
    "backup:stats": "node -e \"require('./src/scripts/backup-reminder.js').showBackupStats()\"",
