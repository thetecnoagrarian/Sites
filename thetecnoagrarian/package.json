  },
  "keywords": [
    "blog",
    "express",
    "handlebars",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ffg/blog-core": "0.1.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
